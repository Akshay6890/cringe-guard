{
    "manifest_version": 3,
    "name": "cringe-guard",
    "author": "Pankaj Tanwar",
    "version": "0.0.1",
    "description": "A prototype chrome extension that filters out cringe content on my LinkedIn feed.",
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["https://www.linkedin.com/feed/*"]
        }
    ],
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Cringe Guard"
    },
    "permissions": [
        "activeTab",
        "storage" 
    ]
}
